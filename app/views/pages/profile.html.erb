<div class="container">
    <div class="profile-main-body">
    
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="profile-card">
                <div class="profile-card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <% if current_user.photo.attached? %>

                   <%= cl_image_tag(current_user.photo.key,  class: "avatar-profile") %>
                    <%else %>
                   <%=  cl_image_tag("qsdgkammqm7nwczbuagw", class: "rounded-profile", width: 150) %>
                   <%end %>
                    <div class="mt-3">
                      <h4><%= current_user.first_name %> <%= current_user.last_name %> </h4>
                       <% unless current_user.linkedin_url.nil? %>
                      <a href=<%= current_user.linkedin_url %>  > <button class="btn btn-primary">Linkedin</button></a>
                      <%end%>
                    </div>
                  </div>
                </div>
              </div>
             
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="profile-card-body">
                     <div>
                  <h1>My experiences</h1>
                  </div>

                  <%current_user.experiences.each do |experience| %>
                     <%if experience.category === "work" %>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">experience.organization.name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= experience.start_date %> <%= experience.end_date %>
                    </div>
                  </div>
                 <%end  %>
                   <%end  %>
                 
                  <hr> 
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn button-cta " data-toggle="modal" data-target="#ExperienceModal" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Add an Experience</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="profile-card mb-3">
                <div class="profile-card-body">
                     <div>
                  <h1>My education</h1>
                  </div>

                  
                  <%current_user.experiences.each do |experience| %>
                     <%if experience.category === "school" %>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">experience.organization.name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= experience.start_date %> <%= experience.end_date %>
                    </div>
                  </div>
                 <%end  %>
                   <%end  %>
                  <hr>              
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn button-cta " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Add an education</a>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            
          </div>

        </div>
    </div>



    <!-- experience modal -->

<div class="modal fade" id="ExperienceModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add an experience</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         
    
         <%= simple_form_for @organization do |f| %>

          <%= f.input :name, as: :string ,:label => "Company name"%>
           <ul id="companyresults">
            </ul>
         
         <% end %>


      <hr>
       <%= simple_form_for @experience do |f| %>
      <%= f.input :start_date, as: :string, input_html: {id: "month_date"}%>
      <%= f.input :end_date, as: :string, input_html: {id: "month_date"}%>
      <%= f.input :description, as: :text%>
      <%= f.input :location, as: :string%>

 
    <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

    
