
<% if apply.interviews.count >0  %>
<div class="modal fade" id="ReviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-display="<%=display_modal ? "show" : "none" %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        
        <h5 class="modal-title" id="exampleModalLabel">First, add an Review about:  <%=apply.interviews.last.step%></h5>
     
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([apply, apply.interviews.last,review], remote: true) do |f| %>
      <hr>
      <%= f.input :rating, as: :integer%>
      <%= f.input :comment, as: :text%>
      </div>
      <div class="modal-footer">
           <%= f.button :submit, "Add", class: "btn button-cta", id:"submitreview"%>
      </div>
    </div>
  </div>
      <% end %>
</div>
      <%end%>
