
<div class="modal fade" id="ItwModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add an interview</h5>
        <%=link_to  apply_path(apply), class:"quitmodal" do %>
        <i class="fas fa-times "></i>
          <%end %>
      </div>
              <%= simple_form_for([apply, interview]) do |f| %>

      <div class="modal-body">
      <%= f.input :date, as: :string, input_html: {id: "date"}  %>
      <%= f.input :start_time, as: :string, input_html: {class: 'houritw hour' }%>
      <%= f.input :end_time, as: :string, input_html: {class: 'houritw hour' }  %>
      <%= f.input :step, as: :string, placeholder: 'Enter the step of your upcoming interview...', input_html: { autocomplete: 'off'  }%>
      <%= f.input :notes, as: :text, placeholder: 'Enter notes, if you have some...', input_html: { autocomplete: 'off'  }%>
      </div>
      <div class="modal-footer">
           <%= f.button :submit, "Add", class: "btn button-cta"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
